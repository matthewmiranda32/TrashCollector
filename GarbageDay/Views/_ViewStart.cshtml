    if (User.IsInRole("Customer"))
    {
        Layout = "~/Views/Shared/CustomerLayout.cshtml";
    }
    else if (User.IsInRole("Trash Collector"))
    {
        Layout = "~/Views/Shared/TrashCollector.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}
